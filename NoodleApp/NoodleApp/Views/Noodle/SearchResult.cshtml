@model List<NoodleApp.Models.Noodle>
@{
    Layout = "_Layout";
}

<div class="container" style="text-align:center">

    <h2>Search Results </h2>

    @foreach (var x in Model)
    {

        <p><strong>@x.Name</strong></p>
        <p>@x.Flavor</p>
        <p><img src="@x.ImgUrl" /></p>

        <p><a asp-controller="Noodle" asp-action="Details" asp-route-id="@x.Id">View Details</a></p>
    }
</div>